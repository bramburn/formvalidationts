{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom"
    ],
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "outDir": "dist",
    "types": [
      "@types/node",
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "strict",
    "dist"
  ]
}